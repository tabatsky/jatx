<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jatx.testtaskandroid.MainActivity"
    android:id="@+id/whole_layout" >
    
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/empty_height"
        />

    <TextView
        android:id="@+id/end_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_big"
        android:textStyle="bold"
        android:gravity="center"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/empty_height"
        />
    
    <RadioGroup
        android:id="@+id/rus_word_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
        <RadioButton
            android:id="@+id/rus_word_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            />
        
        <RadioButton
            android:id="@+id/rus_word_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            />
        
        <RadioButton
            android:id="@+id/rus_word_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            />
    </RadioGroup>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/empty_height"
        />
    
    <TextView
        android:id="@+id/score_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_big"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/empty_height"
        />
    
    <Button
        android:id="@+id/vk_share_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:text="@string/string_vk_share"
        android:visibility="gone"
        />
    
    <Button
        android:id="@+id/show_rating_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:text="@string/string_show_rating"
        android:visibility="gone"
        />
</LinearLayout>
